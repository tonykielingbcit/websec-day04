@model IEnumerable<Paypal.NET.ViewModels.RoleVM>

@{
    ViewData["Title"] = "Detail";
}

@*<h3>Email: @ViewBag.UserName</h3>*@
<h3>@ViewBag.Email</h3>

<p>
    @Html.ActionLink("Assign Roles", "Create",
    new { userName = @ViewBag.UserName })
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleName)
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a asp-action="Index">Back to Users</a>
</p>